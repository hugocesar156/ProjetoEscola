@model ProjetoEscola.Models.Usuario

@{
    ViewData["Title"] = "ProjetoEscola - Login";
    Layout = null;
}

<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/Shared/estilo.css" rel="stylesheet" />

<div class="container container-center" style="position: relative; top: 50%; transform: translateY(-50%);">
    <form asp-action="ValidarLogin" id="formulario-login" method="post" 
          onsubmit="$('#area-submit').addClass('d-none'); $('#area-carregamento').removeClass('d-none');">
        @Html.AntiForgeryToken()
        <input id="input-notificacao" type="hidden" value="@ViewBag.Notificacao">
        <div class="row justify-content-center">
            <div class="col-8 col-md-6">
                <h4>Login</h4>
            </div>
        </div>
        <div class="row justify-content-center mt-2">
            <div class="col-8 col-md-6">
                <label for="email">Usuário</label>
                <input asp-for="Email" type="email" id="email" class="form-control" required>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-8 col-md-6">
                <label for="senha">Senha</label>
                <input asp-for="Senha" type="password" id="senha" class="form-control" required minlength="6">
                <span asp-validation-for="Email" class="span-danger"></span>
            </div>
        </div>
        <div id="area-submit" class="row mt-5 justify-content-center">
            <button class="col-6 col-md-4 btn btn-primary" type="submit">Entrar</button>
        </div>
        <div id="area-carregamento" class="row mt-5 justify-content-center d-none">
            <button class="col-6 col-md-4 btn btn-primary" type="button" disabled>
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Entrar
            </button>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>